<apex:page showHeader="false" controller="ForgotPasswordController" docType="html-5.0" standardStylesheets="false" title="Forgot Password Confirmation">
 <apex:composition template="intraxtemplate_vs3">
 <apex:define name="body">
<div class="row margin-t">
<div class="col-sm-7 col-md-6 col-lg-5 no-float center-block">  
<div class="portal-entry clearfix">
<div class="row">
<div class="col-md-10 col-md-offset-1">                 
<c:block_header_registration userAgentCheck="{!userAgentCheck}" uInParameter="{!uInParameter}"/>
                        
                            <apex:outputPanel layout="block" id="passblock">
                            
                       
                            <h1>Reset Password</h1>
                           <p class="text-center lead">An email has been sent to you with your temporary password.</p>
                            
                        <apex:form styleClass="form-nolabel resetpwd" forceSSL="true">
                            <div class="form-group">

                                <apex:outputLink styleClass="btn btn-link btn-lg btn-block margin-t padding-l2"
                                        value="{!$Site.Prefix}/AppEngine_SiteLoginPage?{!appendSet}" target="_self">
                                        <span><b>Return to Login Page</b></span>
                                    </apex:outputLink>
                            </div>

                        </apex:form>
                
                        </apex:outputPanel>

                    </div>
                    <!--  end registration -->
                </div>
                <!--  end column -->
            </div>
            <!--  end row -->
            </div>
                <!--  end column -->
            </div>
            <!--  end row -->

        </apex:define>
    
    
    
    
    
    
  </apex:composition>
</apex:page>