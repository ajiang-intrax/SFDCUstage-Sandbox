                       <apex:outputtext value="{!item.Record_Locator__c}" rendered="{!IF(item.Engagement__r.Intrax_Program__c == 'Ayusa',true,false)}" />
                      </div>
                      <div class="list-field">
                       <label><apex:outputText value="Arrival to Host Country" rendered="{!IF(item.Engagement__r.Intrax_Program__c == 'Ayusa',true,false)}" /></label>
                       <apex:outputtext value="Yes" rendered="{!IF(item.Arrival_to_Host_Country__c==true && item.Engagement__r.Intrax_Program__c == 'Ayusa', true,false)}"/>
                       <apex:outputtext value="No" rendered="{!IF(item.Arrival_to_Host_Country__c==false && item.Engagement__r.Intrax_Program__c == 'Ayusa', true,false)}"/>
                       </div>
                 </div>
                   
