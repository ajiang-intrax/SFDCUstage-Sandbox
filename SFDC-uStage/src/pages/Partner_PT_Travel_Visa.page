                       <apex:outputtext value="No" rendered="{!IF(item.Departure_from_Host_Community__c==false && item.Engagement__r.Intrax_Program__c == 'Ayusa', true,false)}"/>
                      </div>   
                           
                  </div> 
                  <div class="span4">   
