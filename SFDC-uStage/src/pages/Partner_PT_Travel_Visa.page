                       <div class="list-field">
                           <label><apex:outputText value="Arrival Date"/></label>
                       <apex:outputField value="{!item.Arrival_Date_Time__c}"/>&nbsp;
                       </div>
                       <div class="list-field">
                          <label><apex:outputText value="Arrival City"/></label>
                       <apex:outputText value="{!item.Arriving_City__c}"/>&nbsp;
                       </div> 
                      <div class="list-field"> 
                      <label><apex:outputText value="Arrival Airport Code"/></label>
                       <apex:outputText value="{!item.Arriving_At__c}"/>&nbsp;
                      </div>  
                      <div class="list-field">
                       <label><apex:outputText value="Arrival to Host Community" rendered="{!IF(item.Engagement__r.Intrax_Program__c == 'Ayusa',true,false)}"/></label>
                       <apex:outputtext value="Yes" rendered="{!IF(item.Arrival_to_Host_Community__c==true && item.Engagement__r.Intrax_Program__c == 'Ayusa', true,false)}"/>
                       <apex:outputtext value="No" rendered="{!IF(item.Arrival_to_Host_Community__c==false && item.Engagement__r.Intrax_Program__c == 'Ayusa', true,false)}"/>
                       </div> 
                       
                 </div> 
                 <div class="span4">      
                     <div class="list-field">  
                     <label><apex:outputText value="Airline"/></label>
                       <apex:outputText value="{!item.Carrier__c}"/>&nbsp;
