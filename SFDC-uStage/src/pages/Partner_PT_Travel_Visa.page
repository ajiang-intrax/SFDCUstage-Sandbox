                            <strong><apex:outputText value="Match Start Date: "/></strong><apex:outputField value="{!match.Start_Date__c}"/>&nbsp;
                            <br/><br/>
                            <strong><apex:outputText value="Match End Date: "/></strong><apex:outputField value="{!match.End_Date__c}"/>&nbsp;
                        </div> 
                    </div>
                  </apex:outputPanel>
                    <!-- Add Travel Info Button -->  
                    <div class="form-input">
                        <apex:commandButton action="{!addTravelInfo}" value="Add Travel Info" reRender="myPanel, validationMsg, buttonPanel, myPanel1, myPanel2" status="waitMsg" rendered="{!IF(showTravelForm == false && participant.Intrax_Program__c == 'Ayusa', true, false)}"/>
                        <apex:commandButton action="{!addTravelInfo}" value="Add Arrival Travel Info" reRender="myPanel, validationMsg, buttonPanel, myPanel1, myPanel2" status="waitMsg" rendered="{!IF(showTravelForm == false && participant.Intrax_Program__c == 'Work Travel' && participant.Status__c == 'Program Ready' && ShowTripInfoType == '', true, false)}"/>
